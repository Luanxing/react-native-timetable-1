{
    "env": {
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-unresolved": [
            "error",
            {"ignore": ["^react$", "^react-native$"]}
        ]
    }
}
